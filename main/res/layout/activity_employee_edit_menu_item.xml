<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee_edit_menu_item">

    <EditText
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="160dp"
        android:text="Edit Menu"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_des"
        android:layout_width="409dp"
        android:layout_height="182dp"
        android:layout_marginTop="44dp"
        android:text="description "
        app:layout_constraintTop_toBottomOf="@+id/edit_title"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="409dp"
        android:layout_height="182dp"
        android:layout_marginTop="12dp"
        android:text="title "
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="409dp"
        android:layout_height="182dp"
        android:layout_marginTop="52dp"
        android:text="price "
        app:layout_constraintTop_toBottomOf="@+id/edit_des"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/black"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/edit_title"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="124dp"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_price" />

</androidx.constraintlayout.widget.ConstraintLayout>