<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee_edit_menu_item">

    <ImageView
        android:id="@+id/add_image"
        android:layout_width="254dp"
        android:layout_height="105dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/add_price"
        tools:layout_editor_absoluteX="2dp" />

    <EditText
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/add_des"
        android:layout_width="407dp"
        android:layout_height="118dp"
        android:layout_marginTop="44dp"
        android:text="description "
        app:layout_constraintTop_toBottomOf="@+id/add_title"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/add_title"
        android:layout_width="407dp"
        android:layout_height="91dp"
        android:layout_marginTop="12dp"
        android:text="title "
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/add_price"
        android:layout_width="407dp"
        android:layout_height="101dp"
        android:layout_marginTop="52dp"
        android:text="price "
        app:layout_constraintTop_toBottomOf="@+id/add_des"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="56dp"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_image" />

    <Button
        android:id="@+id/select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Select Image"
        app:layout_constraintStart_toEndOf="@+id/add_image"
        tools:layout_editor_absoluteY="562dp" />

</androidx.constraintlayout.widget.ConstraintLayout>